---
import MainLayout from "../layouts/MainLayout.astro";
import CardsSection from "../components/CardsSection.svelte";
import SearchBar from "../components/SearchBar.svelte";
import TypeChips from "../components/TypeChips.svelte";
import AdvancedFilters from "../components/AdvancedFilters.svelte";
---

<h1></h1>
<MainLayout title="Pokédex">
	<header>
		<h1>Responsive and Reactive Pokédex</h1>
		<p>Salient Features - Low</p>
	</header>
	<div class="app-container">
		<!-- Desktop: Search panel on the left -->
		<aside class="search-panel">
			<SearchBar client:load />
			<TypeChips client:idle />
		</aside>

		<!-- Mobile: Accordion-style filters -->
		<div class="mobile-filters">
			<SearchBar client:load />
			<AdvancedFilters client:load />
		</div>

		<!-- Main content area -->
		<div class="main-content">
			<CardsSection client:load />
		</div>
	</div>
</MainLayout>

<style>
	header {
		text-align: center;
		margin-bottom: 2rem;
	}

	h1 {
		color: #e3350d;
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	.app-container {
		display: flex;
		gap: 20px;
	}

	.search-panel {
		position: sticky;
		top: 10%;
		left: 0;
		height: fit-content;
		width: 250px;
		background: white;
		padding: 1rem;
		border-radius: 8px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}

	.main-content {
		flex: 1;
	}

	.mobile-filters {
		display: none;
		width: 100%;
		margin-bottom: 1rem;
	}

	@media (max-width: 768px) {
		.app-container {
			flex-direction: column;
		}

		.search-panel {
			display: none;
		}

		.mobile-filters {
			display: block;
		}
	}
</style>
